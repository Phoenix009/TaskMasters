<link rel="shortcut icon" type="image/vnd.Microsoft.icon" 
    href="https://kjsieit.somaiya.edu/assets/kjsieit/images/icons/favicon.png">
<title>Requests</title>
<%- include('header'); -%>
<div class="container-fluid">
<div class="row head">
    <div class="mainhead col-md-12 row">
        <div class="col-md-6">
            <h3>Requests for Stationary</h3>
        </div>

        <div class="col-md-3">
            <input type="text" class=" form-control" id="myInput" onkeyup="myFunctionReq()"
                placeholder="Search" /><span></span>
        </div>
    </div>
</div>

</div>
<div class="container d-flex justify-content-center">
    <div class="col-md-offset-2 custyle table-responsive">
        <table id="myTable" class="table table-list-search table-striped custab">
            <thead>
                <tr>
                    <th scope="row">Name</th>
                    <th scope="col">Item</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Timestamp</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <% body.forEach(element => { %>
                <tr>
                    <td><%= element.fname + " " + element.lname %></td>
                    <td><%= element.item %></td>
                    <td><%= element.qty %></td>
                    <td><%=element.date_time%></td>
                    <td class="text-center">
                        <div class="row">

                            <% if(element.qty_flag >= 0){%>
                                <div class="col-lg-6">
                                    <a class='btn btn-success btn-xs' style="margin-right: 2rem;"
                                        href="/edit_requests/accept/<%= element.req_id %>/<%= element.stock_id %>/<%= element.qty %>">
                                        <span class="glyphicon glyphicon-edit"></span>
                                        <i class="fas fa-check"></i> Accept
                                    </a>
                                </div>
                            <% }else { %>
                                <div class="col-lg-6">
                                    <button class='btn btn-success btn-xs' style="margin-right: 2rem;" disabled>
                                        <span class="glyphicon glyphicon-edit"></span>
                                        <i class="fas fa-check"></i> Accept
                                    </button>
                                </div>
                            <% } %>
                            <div class="col-lg-6">
                                <a class="btn btn-danger btn-xs"
                                    href="/edit_requests/reject/<%= element.req_id %>/<%= element.stock_id %>/<%= element.qty %>">
                                    <span class="glyphicon glyphicon-remove"></span>
                                    <i class="far fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<%- include('footer'); -%>