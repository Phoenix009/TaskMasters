<link rel="shortcut icon" type="image/vnd.Microsoft.icon" 
    href="https://kjsieit.somaiya.edu/assets/kjsieit/images/icons/favicon.png">
<title>Summary</title>

<% if(adminFlag) { %>
    <%- include('header'); -%>
<%} else {%>
    <%- include('header_user'); -%>
<% } %>
<div class="container-fluid">
<div class="row head">
    <div class="mainhead col-md-12 row">
        <div class="col-md-6">
            <h3>Status for your Requests</h3>
        </div>

        <div class="col-md-3">
            <input type="text" class=" form-control" id="myInput" onkeyup="myFunction()"
                placeholder="Search" /><span></span>
        </div>
    </div>
</div>

</div>
<div class="container d-flex justify-content-center">
    <div class="col-md-offset-2 custyle table-responsive">
        <table id="myTable" class="table table-list-search table-striped custab">
            <thead>
                <tr>
                    <th scope="row">Sr no. </th>
                    <%if(adminFlag){%>
                    <th scope="row">Name</th>
                    <%}%>
                    <th scope="col">Item</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Timestamp</th>
                    <th scope="col" class="text-center">Status</th>
                </tr>
            </thead>
            <tbody>
                <% var srno = 1;%>
                <% body.forEach(element => { %>
                <tr>
                    
                    <td><%= srno %></td>
                    <%if(adminFlag){%>
                    <td><%= element.name %></td>
                    <%}%>
                    <td><%= element.item %></td>
                    <td><%= element.qty %></td>
                    <td><%=element.date_time%></td>
                    <td class="text-center">
                        <% if(element.req_status==1) {%>
                            <h3 style="color: #58b368;"><i class="far fa-check-circle"></i></h3>
                        <%} else if(element.req_status==-1){%>
                            <h3 style="color: #e84545;"><i class="fas fa-times"></i></h3>
                        <%}else {%>
                            <h3 style="color: #454d66;"><i class="far fa-clock"></i></h3>
                        <%}%>

                    </td>
                </tr>
                <% srno++;}); %>
            </tbody>
        </table>
    </div>
</div>

<%- include('footer'); -%>